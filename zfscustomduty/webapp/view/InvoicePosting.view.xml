<mvc:View
    controllerName="customduty.ui.invoiceposting.controller.InvoicePosting"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:unified="sap.ui.unified"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <f:DynamicPage
        id="invoicePosting"
        showFooter="true"
        fitContent="true"
    >
        <f:title>
            <f:DynamicPageTitle id="idInvoicePostingTitle">
                <f:heading>
                    <Title
                        id="idInvoicePostingTitleText"
                        text="{i18n>InvoicePostingTitle}"
                    />
                </f:heading>
                <f:content>
                    <OverflowToolbar id="idCFURPageHeaderOverFlowToolbar">
                        <GenericTag
                            id="idPlantTag"
                            status="Error"
                            text="{i18n>Plant}"
                            design="StatusIconHidden"
                            visible="{= ${FieldMappings>/SelectionFields/Plant} ? true : false}"
                        >
                            <ObjectNumber
                                id="idPlantDetails"
                                state="Error"
                                emphasized="false"
                                number="{FieldMappings>/SelectionFields/Plant}"
                            />
                        </GenericTag>
                        <GenericTag
                            id="idVendorTag"
                            status="Error"
                            text="{i18n>POVendor}"
                            design="StatusIconHidden"
                            visible="{= ${FieldMappings>/SelectionFields/POVendor} ? true : false}"
                        >
                            <ObjectNumber
                                id="idPOVendorDetails"
                                state="Error"
                                emphasized="false"
                                number="{FieldMappings>/SelectionFields/POVendor}"
                            />
                        </GenericTag>
                    </OverflowToolbar>
                </f:content>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <VBox
                id="idIPVVBox"
            >
                <t:Table
                    rows="{InvoicePostingModel>/}"
                    selectionMode="None"
                    class="sapUiSmallMarginTop sapUiTinyMarginBottom"
                    ariaLabelledBy="title"
                >
                    <t:extension>
                        <OverflowToolbar style="Clear">
                            <Title
                                class="sapUiTinyMargin"
                                id="title"
                                text="{i18n>PostingTitle}"
                            />
                            <ToolbarSpacer />
                            <Button
                                id="idSettings"
                                class="sapUiTinyMargin"
                                icon="sap-icon://settings"
                            />
                        </OverflowToolbar>
                    </t:extension>
                    <t:columns>
                        <t:Column width="8rem">
                            <Label text="{i18n>CountryOfOrigin}" />
                            <t:template>
                                <Text
                                    text="{InvoicePostingModel>CountryOfOrigin}"
                                    wrapping="false"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="9rem">
                            <Label text="{i18n>BENo}" />
                            <t:template>
                                <Text
                                    text="{InvoicePostingModel>BENo}"
                                    wrapping="false"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="9rem">
                            <Label text="{i18n>Invoice}" />
                            <t:template>
                                <Text
                                    text="{InvoicePostingModel>InvoiceNumber}"
                                    wrapping="false"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="9rem">
                            <Label text="{i18n>Material}" />
                            <t:template>
                                <Text
                                    text="{InvoicePostingModel>Material}"
                                    wrapping="false"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="12rem">
                            <Label
                                text="{i18n>ProductDesc}"
                                wrapping="true"
                            />
                            <t:template>
                                
                                <Text
                                    text = "{InvoicePostingModel>ProductDescription}"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="9rem" hAlign="End">
                            <Label
                                text="{i18n>DomesticFreightAmount}"
                                wrapping="true"
                            />
                            <t:template>
                                
                               <Text
                                    text = "{InvoicePostingModel>DomesticFreightAmount}"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="9rem" hAlign="End">
                            <Label
                                text="{i18n>InsuranceAmount}"
                                wrapping="true"
                            />
                            <t:template>
                                
                                <Text
                                    text = "{InvoicePostingModel>InsuranceAmount}"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="9rem" hAlign="End">
                            <Label
                                text="{i18n>OverseasFreightAmount}"
                                wrapping="true"
                            />
                            <t:template>
                                
                               <Text
                                    text = "{InvoicePostingModel>OverseasFreightAmount}"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="9rem">
                            <Label
                                text="{i18n>ForeignCurrency}"
                                wrapping="true"
                            />
                            <t:template>
                                <Text
                                    text = "{InvoicePostingModel>FreightCurrency_code}"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="9rem">
                            <Label
                                text="{i18n>ExchangeRate}"
                                wrapping="true"
                            />
                            <t:template>
                                <Text
                                    text = "{InvoicePostingModel>FreightExrate}"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="9rem">
                            <Label
                                text="{i18n>OverseasFreightVendor}"
                                wrapping="true"
                            />
                            <t:template>
                                <Text
                                    text = "{InvoicePostingModel>OverFreightVendor}"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="9rem">
                            <Label
                                text="{i18n>POVendor}"
                                wrapping="true"
                            />
                            <t:template>
                                <Text
                                    text = "{InvoicePostingModel>InsuranceVendor}"
                                />
                            </t:template>
                        </t:Column>
                    </t:columns>
                </t:Table>
            </VBox>
        </f:content>
        <f:footer />
    </f:DynamicPage>
</mvc:View>
