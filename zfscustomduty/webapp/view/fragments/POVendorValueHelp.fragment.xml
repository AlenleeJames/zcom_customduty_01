<core:FragmentDefinition
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:m="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
>
    <ValueHelpDialog
        title="Select PO Vendor"
        ok="onValueHelpOkPress"
        cancel="onValueHelpCancelPress"
        afterClose="onValueHelpAfterClose"
        supportRanges="true"
        key="Supplier" supportMultiselect="false"
        descriptionKey="SupplierName"
    >
        <filterBar>
            <fb:FilterBar
                advancedMode="true"
                search="onFilterBarSearch"
                isRunningInValueHelpDialog="true"
                showAllFilters="false"
                showGoOnFB="false"
            >
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="Supplier"
                        label="Plant"
                        visibleInFilterBar="false"
                    >
                        <fb:control>
                            <m:Input name="Supplier" />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="SupplierName"
                        label="Plant"
                        visibleInFilterBar="false"
                    >
                        <fb:control>
                            <m:Input name="SupplierName" />
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
        <customData>
            <core:CustomData key="InputId" value="idSSVPOVendorInput"/>
        </customData>
    </ValueHelpDialog>
</core:FragmentDefinition>
